{
  "expo": {
    "name": "Animal Pedia",
    "slug": "animalPedia",
    "description": "This is app for reading articles about animals that are on the verge of extinction.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/birdIcon.png",
    "splash": {
      "image": "./assets/splashBird.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
